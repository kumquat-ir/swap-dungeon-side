{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"/usr/share/dotnet/sdk/3.1.300/MSBuild.dll",
				"/property:GenerateFullPaths=true",
				"/t:build",
				"/consoleloggerparameters:NoSummary"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "TMLinternalbuild",
			"type": "shell",
			"command": "~/Games/terraria/game/tModLoader/tModLoaderServer",
			"args": [
				"-build",
				"\"${workspaceFolder}\""
			],
			//quotes around workspaceFolder because it doesn't escape filepath spaces
			"group": "build",
			"presentation": {
				"reveal": "silent"
			}
		}
	]
}